<% const active = (name) => (type.split(' ').includes(name) ? '-active' : '') %>
<% const link = (path) => type === 'homepage' ? path : path.replace(/^#/, '/#') %>

<% const menus = {
    about: { label: 'About', url: '#intro' },
    services: { label: 'Services', url: '#services' },
    blog: { label: 'Blog', url: '/blog' },
    contact: { label: 'Contact', url: '#contact' },
} %>

<nav class="nav-menu">
    <ul>
        <% for (name of Object.keys(menus)) {
            const menu = menus[name] %>
            <li class="<%- active(name) %>">
                <a href="<%- link(menu.url) %>"><%- menu.label %></a>
            </li>
        <% } %>
    </ul>
</nav>
